<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_screen_background"
    tools:context=".StartingActivity">

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="258dp"
        android:layout_height="174dp"
        android:layout_centerInParent="true"
        android:src="@drawable/cardiac_recoreder_3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_logo"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Cardiac Recorder"
        android:textColor="#B7000000"
        />
</RelativeLayout>